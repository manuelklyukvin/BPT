<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/indent_large"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/iv_back"
            android:layout_width="18dp"
            android:layout_height="28dp"
            android:layout_marginHorizontal="25dp"
            android:background="@drawable/arrow"
            android:onClick="toMain"
            android:rotationY="-180" />

        <EditText
            android:singleLine="true"
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:fontFamily="@font/pt_sans"
            android:paddingHorizontal="@dimen/indent_large"
            android:textColor="@color/light_blue"
            android:textSize="@dimen/text_size_small" />

        <ImageButton
            android:id="@+id/btn_filter"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginHorizontal="@dimen/indent_large"
            android:background="@drawable/filter_off"
            android:onClick="openFilter" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_border"
        style="@style/cv_border"
        android:layout_below="@id/ll_header">

        <TextView
            android:id="@+id/tv_no_results"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/indent_large"
            android:fontFamily="@font/pt_sans"
            android:text="@string/no_results"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_large" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>