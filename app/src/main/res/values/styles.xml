<resources>

    <!-- ============================== main ============================== -->

    <style name="ll_main">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:elevation">@dimen/elevation_normal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/indent_normal</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:background">@drawable/border</item>
    </style>
    <style name="ll_main_widget" parent="ll_main">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="gl_main">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingHorizontal">@dimen/indent_large</item>
        <item name="android:paddingVertical">@dimen/indent_normal</item>
        <item name="android:columnCount">2</item>
        <item name="android:rowCount">2</item>
    </style>

    <style name="iv_main">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>
    <style name="iv_main_widget" parent="iv_main">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
    </style>

    <style name="tv_title_main">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/pt_sans</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:layout_marginStart">@dimen/indent_large</item>
    </style>

    <style name="tv_main">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/pt_sans</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>
    <style name="tv_main_widget" parent="tv_main">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginStart">@dimen/indent_small</item>
    </style>

    <!-- ============================== cabinet_preview ============================== -->

    <style name="ll_cabinet_preview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="tv_cabinet_preview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/pt_sans</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <!-- ============================== cabinet_opened ============================== -->

    <style name="ll_cabinet_opened">
        <item name="android:elevation">@dimen/elevation_normal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">@dimen/indent_large</item>
        <item name="android:paddingVertical">@dimen/indent_small</item>
        <item name="android:background">@drawable/border</item>
    </style>

    <style name="tv_cabinet_opened">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">@dimen/indent_large</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/pt_sans</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="op_cabinet_opened" parent="tv_cabinet_opened">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- ============================== filter_dialog ============================== -->

    <style name="tv_filter_dialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/pt_sans</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="ll_filter_dialog">
        <item name="android:elevation">@dimen/elevation_normal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/indent_normal</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:layout_marginTop">@dimen/indent_large</item>
        <item name="android:layout_marginBottom">@dimen/indent_normal</item>
    </style>

    <style name="spinner_filter_dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:dropDownWidth">match_parent</item>
        <item name="android:popupBackground">@drawable/border</item>
    </style>

    <!-- ============================== other ============================== -->

    <style name="root">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/indent_large</item>
        <item name="android:layout_marginVertical">@dimen/indent_small</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:elevation">@dimen/elevation_normal</item>
    </style>

    <style name="cv_border">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:backgroundTint">@color/background</item>
        <item name="cardCornerRadius">30dp</item>
        <item name="cardElevation">0dp</item>
    </style>

</resources>